{% if template contains 'product'%}
 {% if product.variants.size > 1 %}
<script>
(function($) {
  $(document).ready(function(){
  provariants = {{ product.variants | json }}; 
  setTimeout(function() {
  selopt = $('.product-form__variants option:selected').text().trim(); console.log(selopt);
    var filename ='';
    var choosevart = $('.product-form__variants option:selected').val();
    provariants.forEach(function(obj) {
      if(obj.id==choosevart){
        var image = obj.featured_image.src.split('?')[0];
        filename = image.replace(/^.*[\\\/]/, '');
        
      }
    });
    $( ".productSliderNav img" ).each(function() {
      var image = $(this).attr('src').split('?')[0].replace(/(_thumb\.)|(_small\.)|(_compact\.)|(_medium\.)|(_large\.)|(_grande\.)/,'.');
      var thumbname = image.replace(/^.*[\\\/]/, '');
       var imgalt = $(this).attr('alt');
        
        if(filename === thumbname){
           $(this).trigger('click');
        }
        if(imgalt==selopt){
        $(this).parent().removeClass('hide');
      }else{
          $(this).parent().addClass('hide');
      }
      });
  }, 3000);
  $(document).on('change','.product-form__variants', function(){ 
    seloptc = $('.product-form__variants option:selected').text().trim();  
    var filenamec ='';
    var choosevartc = $(this).val(); 
    provariants.forEach(function(obj) {
      if(obj.id==choosevartc){
        var image = obj.featured_image.src.split('?')[0];
        filenamec = image.replace(/^.*[\\\/]/, ''); 
      }
    });
    $( ".productSliderNav img" ).each(function() {
      var imagec = $(this).attr('src').split('?')[0].replace(/(_thumb\.)|(_small\.)|(_compact\.)|(_medium\.)|(_large\.)|(_grande\.)/,'.');
      var thumbnamec = imagec.replace(/^.*[\\\/]/, '');
       var imgaltc = $(this).attr('alt'); 
        if(filenamec === thumbnamec){
           $( this ).trigger('click');
        }
        if(imgaltc==seloptc){ 
        $(this).parent().removeClass('hide');
      }else{
          $(this).parent().addClass('hide');
      }
      });
  });
  });
 })(jQuery);
</script> 
