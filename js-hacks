<script type="text/javascript">
(function($){
$(document).ready(function(){
  $(document).on('click',".boxVideo__btn",function () {
                var video = $(this).parents('.tiktokChallangeVBox').find("video").get(0);
     			
                video.addEventListener('ended', myHandler, false);
                $(this).toggleClass("active");
                if (video.paused === true) {
                    video.play();
                    $(this).parents('.tiktokChallangeVBox').addClass("active");
                } else {
                    video.pause();
                    $(this).parents('.tiktokChallangeVBox').removeClass("active");
                }
    
                var isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);
                if (isSafari){
                              video.addEventListener('ended',function(){
                              setTimeout(function(){ video.load();}, 1000);
                              $(this).parents(".tiktokChallangeVBox").find(".boxVideo__btn").removeClass("active");
                              $(this).parents('.tiktokChallangeVBox').removeClass("active");
                          });
                }

                function myHandler(e) {
                    $(this).parents(".tiktokChallangeVBox").find(".boxVideo__btn").removeClass("active");
                    $(this).parents('.tiktokChallangeVBox').removeClass("active");
                }
            });
  $(document).on("click", ".tiktokreadBtn",function () {
            $(this).parent().siblings().removeClass("d-none");
            $(this).parent().addClass("d-none");
