    infinite: false,
    asNavFor: '.trulySlidemain',
    arrows: true,
    prevArrow: $(".trulySlideNav__btn.trulySlideNav__btnLeft"),
    nextArrow: $(".trulySlideNav__btn.trulySlideNav__btnRight"),
});
  $(".UniwhatpeopleSay").slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    arrows: true,
    dots: false,
    responsive: [
        {
            breakpoint: 990,
            settings: {
                slidesToShow: 2,
                slidesToScroll: 1, 
            }
        },
        {
            breakpoint: 576,
            settings: {
                slidesToShow: 1,
                slidesToScroll: 1
            }
        }
  
    ]
});
  $('.Product__halfSliderLeft').slick({
    slidesToShow: 1.5,
    dots: false,
    arrows: true,
    prevArrow: $(".Product__halfSliderLeft__btn.onhalfSliderLeft__btnLeft"),
    nextArrow: $(".Product__halfSliderLeft__btn.onhalfSliderLeft__btnRight"),
});
  });
  function run_animate() {
    var animation_items = $(".animate");



    var ml2 = 0;
    setInterval(function() {
      if (ml2 <= 0 - $(".animate2 .animate-wrapper").width() / 2 - 16) {
        ml2 = 0;
      }

      $(".animate2 .animate-wrapper").css("margin-left", ml2);
      ml2 -= 0.5;
    }, 20);
       
  }
  
  $(window).on("load", function() {
    run_animate();
  });
  })(jQuery);
</script>

