<script type="text/javascript">
(function($){
  var ajax_rev=ajax_pro='';
  var productimage1=productimage2=variationid=productprice='';
  function bestsellersreviews(){
  $.ajax({
    url: "https://mytrulydeals.com/trulybeauty/reviews/index.php",
        type: 'GET',
        dataType: 'json',
        success: function (reviewresponse) {
          //console.log(reviewresponse.products);
          reviewresponse.reviews.forEach(function(review, index) {
