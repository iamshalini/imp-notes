(function($){
$(document).ready(function(){
$(".smoothScroll").on('click', function(event) {
        
      if (this.hash !== "") {
        event.preventDefault();
        // Store hash
        var hash = this.hash;
        $('html, body').animate({ scrollTop: $(hash).offset().top}, 800, function(){ });
      } // End if
    });
});
 })(jQuery);
